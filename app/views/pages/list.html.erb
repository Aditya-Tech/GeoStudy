<head>
  <title>GeoStudy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-brand">GeoStudy</div>
      <ul class="nav navbar-nav">
        <% if current_user %>
          
        <% end %>
      </ul>
      <% if current_user %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-text navbar-right navbar-link" %>

      <% else %>  
        <%= link_to "Sign up", new_user_registration_path, class: "navbar-text navbar-right navbar-link" %>
        <%= link_to "Login", new_user_session_path, class: "navbar-text navbar-right navbar-link" %>
      <% end %>
      <!--/= render 'devise/menu/login_items'
      -->
    </div>
  </nav>
  <div class="container">
    <%= yield %>
  </div>
</body>

<% if @user_signed_in %>
    <h2>User is signed in!</h2>
    
<% end %>